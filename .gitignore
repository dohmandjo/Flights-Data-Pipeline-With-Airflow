# Create/append .gitignore
cat >> .gitignore <<'EOF'
# OS / editors
.DS_Store
.vscode/
.idea/

# Python env & artifacts
.venv/
venv/
env/
__pycache__/
*.py[cod]

# Node
node_modules/

# Data & generated artifacts (adjust to your repo)
Data/
data/
datasets/
*.parquet
*.csv
*.tsv
*.db
*.log

# Spark / Kafka
spark-warehouse/
metastore_db/
derby.log
kafka-logs/
logs/

# Jupyter
.ipynb_checkpoints/
EOF